@model IEnumerable<Medicine.Models.Medicament>

@{
    ViewBag.Title = "GetListOfMedicaments";
}

<h2>GetListOfMedicaments</h2>

<p>
    @Html.ActionLink("Add medicament", "AddMedicament", new { id = @ViewData["patientId"] })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Volume)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AmountPerDay)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Volume)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AmountPerDay)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditMedicament", new { id=item.Id }) |
            @Html.ActionLink("Delete", "DeleteMedicament", new { id=item.Id })
        </td>
    </tr>
}

</table>
